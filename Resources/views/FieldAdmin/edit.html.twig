{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $(function() {
            $('form').attr('novalidate', 'novalidate');

            $('.field_type, .field_select_type').change(function() {
                var fieldType = $('.field_type').val();

                // select type
                $('.field_select_type').parent().parent().toggle(fieldType === 'select');

                // multiple select
                $('.field_select_multiple').parent().parent().toggle(fieldType === 'select' && $('.field_select_type').val() !== 'radio');

                // default
                $('.field_default').parent().parent().toggle(fieldType !== 'checkbox');

                // options
                $('.sonata-ba-field-inline-table').parent().toggle(fieldType === 'select');

            }).change();
        });
    </script>

{% endblock %}
