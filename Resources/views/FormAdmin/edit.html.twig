{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            $('form').attr('novalidate', 'novalidate');
            $('.form_success_action').change(function() {
                if (this.value == 'redirect') {
                    $('.form_success_url').parent().parent().show();
                    $('.form_success_message').parent().parent().hide();
                } else {
                    $('.form_success_url').parent().parent().hide();
                    $('.form_success_message').parent().parent().show();
                }
            }).change();
            $('.form_mail_toggle').change(function() {
                $('.form_mail_related').parent().parent().toggle(this.checked);
            }).change();
        })
    </script>

{% endblock %}
